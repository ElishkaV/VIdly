@model IEnumerable<Vidly2018.Models.Customer>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Customers</h2>

    @if (Model.Count() > 0)
    {
        <table class="table table-bordered table-hover">
            <thead>
                <tr>
                    <th>Customer</th>
                    <th>Discount Rate</th> 
                </tr>
            </thead>
            <tbody>
                @foreach (var customer in Model)
                {
                    <tr>
                        <td>@Html.ActionLink(customer.FirstName + " " + customer.LastName, "Details", "Customers", new { id = customer.Id }, null)</td>
                        <td>@customer.MembershipType.MembershipName</td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <text>There are no customers yet!</text>
    }
