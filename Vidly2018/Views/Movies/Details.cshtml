@model Vidly2018.Models.Movie
@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>@Model.Name</h2>
<ul>
    <li>Genre: @Model.Genre.Name</li>
    <li>Release Date: @Model.ReleaseDate.ToString("d MMM yyyy")</li>
    <li>Date added: @Model.DateAdded.ToString("d MMM yyyy")</li>
    <li>Numbers in stock: @Model.NumbersInStock</li>
</ul>

